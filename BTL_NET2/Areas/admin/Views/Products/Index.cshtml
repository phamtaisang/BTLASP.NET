@using BTL_NET2.Models;
@using PagedList;
@using PagedList.Mvc;
@model List<PRODUCT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Sản phẩm
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0"> 
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá (VNĐ)</th>
                        <th>Loại sản phẩm</th>
                        <th>Hãng</th>
                        <th>Hình ảnh</th>
                        @*<th>Tình trạng</th>*@
                        <th colspan="1">Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá (VNĐ)</th>
                        <th>Loại sản phẩm</th>
                        <th>Hãng</th>
                        <th>Hình ảnh</th>
                        @*<th>Tình trạng</th>*@
                        <th>Chức năng</th>
                    </tr>
                </tfoot>

                <tbody>
                    @foreach (var i in ViewBag.sp)
                    {
                        <tr>
                            <td>@i.name</td>
                            <td>@i.price</td>
                            <td>@i.category.name</td>
                            <td>@i.producer.name</td>
                            <td> <img src="~/Style_CSS/image/product/@i.images"/ width="50px" /></td>

                            @*<td>
                            @{
                                if (i.status == 1)
                                {
                                    <span>Nổi bật</span>
                                }
                                else
                                {
                                    <span>Thường</span>
                                }
                            }
                        </td>*@
                            <td>
                                <a href="@Url.Action("Sua_sanpham", "Products", new { @id=@i.id })" class="btn btn-primary" title="Sửa"><i class="fas fa-edit"></i>&nbsp;&nbsp;Sửa</a>
                                &nbsp;&nbsp;
                                <a onclick="return confirm('Bạn có chắc muốn xóa không?')" href="@Url.Action("Xoa_sanpham", "Products", new { @idSP=i.id })" class="btn btn-danger" title="Xóa"><i class="fas fa-trash"></i>&nbsp;&nbsp;Xóa</a>
                            </td>
                            @*<td><a href="#">Xóa</a></td>*@
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="@Url.Action("Them_sampham", "Products")" class="btn btn-danger"><i class="fas fa-plus-circle"></i>&nbsp;&nbsp;Thêm mới</a>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

