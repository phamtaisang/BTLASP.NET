@model BTL_NET2.Models.PRODUCT

@{
    ViewBag.Title = "Them_sampham";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm sản phẩm mới</h2>

@using (Html.BeginForm("Them_sanpham", "Products", FormMethod.Post))
