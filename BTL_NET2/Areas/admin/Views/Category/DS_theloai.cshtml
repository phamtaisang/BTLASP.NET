
@{
    ViewBag.Title = "DS_theloai";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        @foreach(var i in ViewBag.name)
        {
            @i.name
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Hãng</th>
                        <th>Hình ảnh</th>
                        <th>Ngày nhập</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Hãng</th>
                        <th>Hình ảnh</th>
                        <th>Ngày nhập</th>
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var i in @ViewBag.tl)
                    {
                        <tr>
                            <td>@i.name</td>
                            <td>@i.price</td>
                            <td>@i.producer.name</td>
                            <td><img src="~/Style_CSS/image/product/@i.images"/ width="50px" /></td>
                            <td>@i.created_at</td>
                            <td>
                                <a href="@Url.Action("Sua_sanpham", "Category", new { @id=@i.id })" class="btn btn-primary"><i class="fas fa-edit"></i>&nbsp;&nbsp;Sửa</a>
                                &nbsp;&nbsp;
                                <a onclick="return confirm('Bạn có chắc muốn xóa không?')" href="@Url.Action("Xoa_sanpham", "Category", new { @idSP=i.id })" class="btn btn-danger"><i class="fas fa-trash"></i>&nbsp;&nbsp;Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="@Url.Action("Them_sampham", "Products")" class="btn btn-danger"><i class="fas fa-plus-circle"></i>&nbsp;&nbsp;Thêm mới</a>
        </div>
    </div>
</div>

