@using BTL_NET2.Models;
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "DS_Bill";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Hóa đơn của
        @foreach (var i in ViewBag.nameBill)
        {
            @i.account.name
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá/sản phẩm</th>
                        <th>Giảm giá (%)</th>
                        <th>Tổng</th>
                        <th>Ngày giao dịch</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá/sản phẩm</th>
                        <th>Giảm giá (%)</th>
                        <th>Tổng</th>
                        <th>Ngày giao dịch</th>
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var i in ViewBag.bil)
                    {
                        <tr>
                            <td>@i.id</td>
                            <td>@i.PRODUCT.name</td>
                            <td>@i.quantity</td>
                            <td>@i.price</td>
                            <td>@i.discount %</td>
                            <td>@i.sum_price</td>
                            <td>@i.created_at</td>
                            <td>
                                <a onclick="return confirm('Bạn có chắc muốn xóa không?')" href="@Url.Action("Xoa_billdetail", "Bill", new { @idBilldetail=i.id })" class="btn btn-danger"><i class="fas fa-trash"></i>&nbsp;&nbsp;Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
