@using BTL_NET2.Models;
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Hóa đơn
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Người mua</th>
                        <th>Tổng số hóa đơn</th>
                        <th>Ngày lập hóa đơn đầu</th>
                        <th>Ngày lập hóa đơn cuối</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Người mua</th>
                        <th>Tổng số hóa đơn</th>
                        <th>Ngày lập hóa đơn đầu</th>
                        <th>Ngày lập hóa đơn cuối</th>
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var i in ViewBag.hoadon)
                    {
                        <tr>
                            <td>@i.id</td>
                            <td>@i.account.email</td>
                            <td>@i.total</td>
                            <td>@i.created_at</td>
                            <td>@i.update_at</td>
                            <td>
                                <a href="@Url.Action("DS_Bill", "Bill", new { @idBill=i.id })" class="btn btn-primary" title="Xem"><i class="fas fa-eye"></i>&nbsp;&nbsp;Xem</a>
                                &nbsp;&nbsp;
                                <a onclick="return confirm('Bạn có chắc muốn xóa không?')" href="@Url.Action("Xoa_bill", "Bill", new { @idBill=i.id })" class="btn btn-danger" title="Xóa"><i class="fas fa-trash"></i>&nbsp;&nbsp;Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

