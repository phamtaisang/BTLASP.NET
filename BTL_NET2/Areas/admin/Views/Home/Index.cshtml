<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Phản hồi nhiều nhất
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        @*<th>Tổng số bình luận</th>*@
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        @*<th>Tổng số bình luận</th>*@
                        <th>Chi tiết</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var i in @ViewBag.SumCmt)
                    {
                        <tr>
                            <td>@i.id</td>
                            <td>@i.name</td>
                            <td>@i.address</td>
                            <td>@i.phone</td>
                            <td>@i.email</td>                            
                            <td><a href="@Url.Action("Comment", "User", new {name= i.name, id = i.id})" class="btn btn-primary" title="Xem"><i class="fas fa-eye"></i>&nbsp;&nbsp; Xem</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



